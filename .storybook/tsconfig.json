{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "../src/**/*",
    "./preview.tsx",
    "./main.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
} 